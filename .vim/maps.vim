let mapleader=" "

" Increment/Decrement
map <C-u> <C-a>
map <C-n> <C-x>

" Select workd under cursor
map <leader>kl bve

" Open NERDTreeToggle
map <leader>ee :NERDTreeToggle<CR>

" Save file
map <leader>w :w<CR>
map <leader>q :q<CR>
map <leader>z :wqall<CR>

" Adding an empty line below, above and below with insert
nmap op o<Esc>k
nmap oi O<Esc>j
nmap oo A<CR>

" Shortcuts for split navigation
map <leader>h <C-w>h
map <leader>l <C-w>l

" Prettier
map <leader>P :Prettier<CR>

" Move a line
map <leader>k ddkP
map <leader>j ddp
 
" Run python Code
map <leader>O :!python %<CR>

" Run Node Code
map <leader>nn :!node %<CR>

" Fast scroll
map <C-j> 10<C-e>
map <C-k> 10<C-y>

" Resize splits
nnoremap <Leader>. 10<C-w>>
nnoremap <Leader>, 10<C-w><

" Delete a buffer
nmap td :bd<CR>

" Create splits
nmap th :split<CR>
nmap tv :vsplit<CR>

" Close splits and others
nmap tt :q<CR>

